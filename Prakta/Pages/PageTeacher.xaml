<Page x:Class="Prakta.Pages.PageTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prakta.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Учитель">

    <Grid>
        <Button 
            Name="BtnBack"
            Click="BtnBack_Click"
            Content="Назад"
            Style="{StaticResource AcceptTran}"/>
        <!--Окно Учителя-->
        <Grid>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button Content="Добавить студента"
                        Name="BtnAddStudent"
                        Click="BtnAddStudent_Click"/>
                <Button Content="Добавить оценку"
                        Name="BtnAddEvaluation"
                        Click="BtnAddEvaluation_Click"/>
                <Button Content="Список студентов"
                        Name="BtnListSudent" Click="BtnListSudent_Click"/>
                <Button Content="Радектировать оценки"/>
                <Button Content="Удалить студента"/>
                <Button Content="MVC"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
